    {
      "name": "0. Setup",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"auth_token\", jsonData.token);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "username",
                  "value": "admin",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}:8080/auth/login",
              "host": ["{{base_url}}"],
              "port": "8080",
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Create Profile - LegitPlayer",
          "request": {
